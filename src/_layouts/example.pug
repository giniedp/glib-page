//- ignore: true
doctype html
html(lang="en")
  head
    link(rel="stylesheet" href="/page.css")
    script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/dat-gui/0.6.2/dat.gui.js')
    script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/showdown/1.7.1/showdown.min.js')
    script(type='text/javascript' src='/page.js')
    script(type='text/javascript').
      var uiInstance = null;
      var ui = function(callback){
        if (!uiInstance) {
          uiInstance = new dat.GUI({autoPlace: false});
          document.getElementById('dat-gui').appendChild(uiInstance.domElement);
        }
        callback(uiInstance);
      };

body.sample-container.dark-theme
  #dat-gui
  .sample-view
    block view
      .canvas-container
        canvas#canvas(oncontextmenu="return false;")
      script(type='text/javascript' src='/glib.js')
  .sample-code
  .sample-source
    block script
  script(type='text/javascript').
    GlibSamples.bootSample({
      view: '.sample-view',
      code: '.sample-code',
      source: '.sample-source'
    });
